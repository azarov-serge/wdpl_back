# Сервер
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# База данных
DATABASE_URL=postgres://wdpl_user:wdpl_password@localhost:5432/wdpl_db?sslmode=disable

# JWT секреты (обязательно измените в production!)
JWT_SECRET=your-secret-key-here-change-in-production
REFRESH_SECRET=your-refresh-secret-key-here-change-in-production
ACCESS_TOKEN_TTL=15
REFRESH_TOKEN_TTL=30

# Логирование (info, debug, warn, error)
LOG_LEVEL=info
LOG_FORMAT=text

# CORS (разделите несколько origins запятой, или используйте * для всех)
CORS_ALLOWED_ORIGINS=*

# Окружение (development, production)
ENVIRONMENT=development

# Хранилище файлов (MinIO)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=wdpl-files
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Настройки загрузки файлов
MAX_FILE_SIZE=10485760
# Максимальный размер файла в байтах (10MB по умолчанию)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
# Разрешенные MIME типы для изображений (через запятую)
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
# Разрешенные MIME типы для документов (через запятую)
